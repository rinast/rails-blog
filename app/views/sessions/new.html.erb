<div class="container col-xl-10 col-xxl-8 px-4 py-1">
  <div class="row align-items-center g-lg-5 py-5">
    <div class="col-lg-6 text-center text-lg-start">
      <h1 class="display-4 fw-bold lh-1 mb-3">Log In</h1>
      <p class="col-lg-10 fs-5">Login for existing users.</p>
    </div>
    <div class="col-md-10 mx-auto col-lg-6">
      
      <%= form_with(scope: :session, url: login_path, data: {turbo:false}, local: true) do |f| %>
        <div class="form-group col-12 user-form">
          <%= f.email_field :email, class: "col-12 form-field", placeholder: "Email" %>
          <%= f.password_field :password, class: "col-12 form-field", placeholder: "Password" %>
        </div>
        <div class="form-group col-12">
          <%= f.submit "Log In", class: "btn btn-submit" %>
        </div>
      <% end %>

    </div>
  </div>
</div>