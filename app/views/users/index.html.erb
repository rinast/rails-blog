<div class="container col-xl-10 col-xxl-8 px-4 py-5">
  <div class="row align-items-center g-lg-5 py-5">
    <div class="col-lg-10 text-center mx-auto">
      <h1 class="display-4 fw-bold lh-1 mb-3">Writers</h1>
    </div>
  </div>
  <div class="flickr_pagination mb-5 mt-5">
    <%= will_paginate @users, :container => false %>
  </div>
  <div class="row align-items-center g-lg-5">
    <% @users.each do |user| %>
      <div class="col-lg-12 text-lg-start">
        <h1 class="display-6 text-center fw-bold lh-1 mb-3"><%= link_to user.username, user, class: "article-index-link" %></h1>
        <p class="text-center"><%= pluralize(user.articles.count, "article") %></p>
        <div class="row align-items center g-lg-5">
          <div class="text-center mx-auto col-lg-10">
            <%= link_to "View blog", user, class: "small-btn" %>
            <% if logged_in? && user == current_user %>
              <%= link_to "Edit profile", edit_user_path(user), class: "small-btn" %>
            <% end %>
          </div>
        </div>
        <% if user != @users.last %>
          <hr class="users-hr mt-5">
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="flickr_pagination mb-5 mt-5">
    <%= will_paginate @articles, :container => false %>
  </div>
</div>
